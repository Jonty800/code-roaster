{
    "name": "code-roaster",
    "displayName": "Code Roaster",
    "description": "Roasts your code when you save it... out loud!",
    "version": "0.0.5",
    "publisher": "JonBaker",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onCommand:code-roaster.roastMyCode"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "code-roaster.roastMyCode",
                "title": "Roast My Code"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "axios": "^1.7.7"
    }
}
